<Window x:Class="Kylosov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kylosov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="Auth" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Логин" Margin="10,10,300,10" FontSize="24px" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox x:Name="Login" Height="50px" Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500px"/>
            
            <TextBlock Text="Пароль" Margin="10,10,300,10" FontSize="24px" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="Password" Height="50px" Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500px"/>

            <Button x:Name="AuthBTN" Height="50px" Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500px" Content="Войти" Click="AuthBTN_Click" />
        </StackPanel>

        <StackPanel x:Name="Parrent"/>
    </Grid>
</Window>
